
  <% if @flat.picture_url %>
     <%= image_tag(@flat.picture_url, alt: "Flat Image", class: "header-image") %>
    <% else %>
      <%= image_tag("https://images.unsplash.com/photo-1518780664697-55e3ad937233?q=80&w=1965&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt: "Default Image", class: ".header-image", width: "300", height: "300") %>
    <% end %>

<div class="container container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="card">
        <h1><%= @flat.name %></h1>
        <p> <%= @flat.address %>
      </div>
      <div class="card">
        <h3>A bit more about this flat...</h3>
        <p>
          <%= @flat.description %>
      </div>
        <iframe src="https://www.google.com/maps/embed?pb=!1m10!1m8!1m3!1d42019.48525126673!2d2.2394237!3d48.8349836!3m2!1i1024!2i768!4f13.1!5e0!3m2!1sen!2sfr!4v1715280112002!5m2!1sen!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      <div>
      </div>
    </div>
    <div class="col-4">
      <div class="card">
        <div class="card-body">
          <h3>Book this flat</h3>
          <p>Number of guests: <%= @flat.number_of_guests %></p>
          <p>Price per night: <%= @flat.price_per_night %></p>
        </div>
      </div>
    </div>
  </div>
</div>

  <style>
    .header-image {
      width: 100%;
      height: 300px;
      object-fit: cover;
    }
    .margin-top-negative {
      margin-top: -100px;
    }
  </style>
