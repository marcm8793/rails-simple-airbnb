<div class="card">

    <% if flat.picture_url %>
     <%= image_tag(flat.picture_url, alt: "Flat Image", class: "card-img-top", width: "300", height: "300") %>
    <% else %>
      <%= image_tag("https://images.unsplash.com/photo-1518780664697-55e3ad937233?q=80&w=1965&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D", alt: "Default Image", class: "card-img-top", width: "300", height: "300") %>
    <% end %>


  <div class="card-body">

    <div class="card-title">
        <h4><%= flat.name %></h4>s
    </div>

    <p><%= flat.address %></p>

    <div class="d-inline-flex justify-content-center align-items-center">
      <i class="fa-solid fa-people-line"></i>
      <span><%= flat.number_of_guests %></span>
      <i class="fa-solid fa-euro-sign"></i>
      <span><%= flat.price_per_night %></span>
    </div>

    <div class="card-text d-flex">
      <%= link_to "More Info", flat_path(flat), class: "btn btn-primary" %>
      <%= link_to "Edit", edit_flat_path(flat), class: "ms-3 text-warning" %>
      <%= link_to "Remove", flat_path(flat), class: "ms-3 text-danger" %>
    </div>
  </div>

</div>
